// Définit la source de données, en utilisant SQLite
datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// Générateur Prisma Client
generator client {
    provider = "prisma-client-js"
}

// Modèle d'exemple pour un utilisateur
model User {
    id    Int    @id @default(autoincrement())
    name  String
    email String @unique
}

// Modèle d'exemple pour un pal
model Pal {
    id    Int    @id @default(autoincrement())
    name  String
    number Int @unique
    element String
    partnerSkill String 
    worksFor String
    drops String    
}